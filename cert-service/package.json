{
  "name": "makerspace-cert-service",
  "version": "1.0.0",
  "description": "Certificate issuing service for IoT devices",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "docker:build": "docker build -t makerspace-cert-service .",
    "docker:run": "docker run -p 3000:3000 makerspace-cert-service"
  },
  "dependencies": {
    "@azure/arm-eventgrid": "^14.2.0",
    "@azure/identity": "^4.0.1",
    "express": "^4.18.2",
    "node-forge": "^1.3.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "mqtt": "^5.3.4",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/node-forge": "^1.3.11",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
